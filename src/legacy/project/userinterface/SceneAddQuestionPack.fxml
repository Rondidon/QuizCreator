<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <BorderPane id="color-header" stylesheets="@skin.css" BorderPane.alignment="CENTER">
         <center>
            <Label fx:id="labelHeaderAddQuestionPack" text="%text_addquestionpack" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
            </Label>
         </center>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </BorderPane>
   </top>
   <bottom>
      <HBox id="color-footer" alignment="CENTER_RIGHT" spacing="5.0" stylesheets="@skin.css" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="buttonCancel" mnemonicParsing="false" onAction="#handleButtonAction" text="%button_cancel" />
            <Button fx:id="buttonCreate" mnemonicParsing="false" onAction="#handleButtonAction" text="%button_createquestionpack" />
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </HBox>
   </bottom>
   <center>
      <VBox>
         <children>
            <TextField fx:id="textField" promptText="%text_animalquestions">
               <padding>
                  <Insets bottom="5.0" left="10.0" right="5.0" top="5.0" />
               </padding>
            </TextField>
         </children>
      </VBox>
   </center>
</BorderPane>
